{
  "project": "Deptos Monte Hermoso",
  "palette": {
    "primary": "#A8DADC",      // Un azul verdoso pastel, como el mar calmo
    "secondary": "#F1DABF",    // Un beige arena c치lido
    "accent": "#E6A4B4",       // Un rosa coral suave para botones y llamados a la acci칩n
    "background": "#FDF8F0",   // Un blanco hueso muy claro, casi arena blanca
    "text_primary": "#4A4A4A", // Un gris oscuro para el texto principal, m치s suave que el negro puro
    "text_secondary": "#7E7E7E"// Un gris m치s claro para textos secundarios
  },
  "typography": {
    "font_family_headings": "'Satoshi', sans-serif",
    "font_family_body": "'Satoshi', sans-serif",
    "base_font_size": "16px",
    "headings": {
      "h1": {
        "size": "2.5rem",  // 40px
        "weight": 700
      },
      "h2": {
        "size": "2rem",    // 32px
        "weight": 700
      },
      "h3": {
        "size": "1.5rem",  // 24px
        "weight": 500
      }
